{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "start": "npm-run-all --parallel security_check open:src test:watch start-mockapi",
    "prestart": "node buildScripts/startMessage.js",
    "open:src": "node buildScripts/srcServer.js",
    "security_check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel open:src localtunnel",
    "tsc": "tsc -p . ",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test",
    "build": "node buildScripts/build.js",
    "postbuild": "node buildScripts/distServer.js",
				"deploy": "surge ./dist"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "awesome-typescript-loader": "^5.0.0-1",
    "fetch": "^1.1.0",
    "typescript": "^2.9.1",
    "typings-for-css-modules-loader": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^10.3.2",
    "babel-cli": "^6.26.0",
    "babel-register": "^6.26.0",
    "chai": "3.5.0",
    "chalk": "1.1.3",
    "cheerio": "0.22.0",
    "compression": "^1.7.2",
    "cross-env": "3.1.3",
    "css-loader": "^0.28.11",
    "css-selector": "^0.1.0",
    "deploy": "surge ./dist",
    "eslint": "3.8.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-watch": "2.1.14",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "9.8.0",
    "json-schema-faker": "^0.4.7",
    "json-server": "^0.14.0",
    "localtunnel": "^1.9.0",
    "mocha": "3.1.2",
    "nglint": "0.0.0",
    "nock": "8.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "source-map": "^0.7.3",
    "style-loader": "^0.13.2",
    "style-selector": "^2.0.2",
    "surge": "^0.20.1",
    "tapable": "1.0.0-beta.5",
    "ts-node": "^6.1.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0",
    "webpack-md5-hash": "0.0.6",
    "whatwg-fetch": "^1.0.0"
  }
}
